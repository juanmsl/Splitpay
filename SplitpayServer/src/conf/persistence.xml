    <jta-data-source>jdbc/myDatasource</jta-data-source>
    <class>entities.Deuda</class>
    <class>entities.Grupo</class>
    <class>entities.Notificacion</class>
    <class>entities.Pago</class>
    <class>entities.Pagonomina</class>
    <class>entities.Usuario</class>
    <class>entities.Usuariodeuda</class>
    <class>entities.Usuariogrupo</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
